# Application Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Storage Configuration
SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1
SUPABASE_STORAGE_PUBLIC_URL=https://your-project.supabase.co/storage/v1/object/public
STORAGE_BUCKET_AVATARS=avatars
STORAGE_BUCKET_PRODUCTS=products
STORAGE_BUCKET_DOCUMENTS=documents

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Database Configuration (if using direct PostgreSQL connection)
DATABASE_URL=postgresql://username:password@localhost:5432/fitlink_db

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Fonnte Configuration
FONNTE_API_KEY=
FONNTE_API_URL=